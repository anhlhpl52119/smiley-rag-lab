{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "rootDir": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
